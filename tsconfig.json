{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "dist",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "rootDirs": [
        "src",
        "tests"
    ],
    "baseUrl": "src",
    "paths": {
      "../*": [
        "*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "ts-node": {
    "esm": true
  }
}
